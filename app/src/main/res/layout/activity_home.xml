<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.cropbit.sahathanahomecare.activity.HomeActivity">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        android:elevation="4dp"
        android:onClick="request"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospitals"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-bold"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <!-- map -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="2dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/white">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-bold"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <!-- content -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorBackground"
            android:elevation="2dp"
            android:layout_marginTop="4dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- content roll -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:orientation="vertical">

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_background_with_border"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile Name"
                            android:id="@+id/profile_name"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-regular"
                            android:textColor="#bc000000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>
                    </LinearLayout>

                    <!--&lt;!&ndash; Email &ndash;&gt;-->
                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="72dp"-->
                        <!--android:orientation="vertical"-->
                        <!--android:background="@drawable/white_background_with_border"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:paddingLeft="16dp">-->
                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Profile Email"-->
                            <!--android:id="@+id/profile_email"-->
                            <!--android:textSize="16sp"-->
                            <!--android:fontFamily="sans-serif-regular"-->
                            <!--android:textColor="#bc000000" />-->
                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Email"-->
                            <!--android:textSize="14sp"-->
                            <!--android:fontFamily="sans-serif-regular"/>-->
                    <!--</LinearLayout>-->

                    <!-- Mobile -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_background_with_border"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile Mobile"
                            android:id="@+id/profile_phno"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-regular"
                            android:textColor="#bc000000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-regular"/>
                    </LinearLayout>

                    <!-- logout button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_background_with_border"
                        android:gravity="center_vertical">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Requests"
                            android:id="@+id/gotoRequestsButton"
                            android:textColor="@color/colorPrimary"
                            style="?android:attr/borderlessButtonStyle"/>
                    </LinearLayout>

                    <!-- logout button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:orientation="vertical"
                    android:background="@drawable/white_background_with_border"
                    android:gravity="center_vertical">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:id="@+id/profile_action"
                        android:textColor="@color/colorPrimary"
                        style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>

                </LinearLayout>

            </ScrollView>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>

